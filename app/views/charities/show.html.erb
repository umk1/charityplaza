<% provide(:title, @charity.title) %>

<h1><%= @charity.title %></h1>

<div>
  <p><%= @charity.tax_id_number %></p>
  <p><%= @charity.tax_exempt_status %></p>
  <p><%= @charity.organization_type %></p>
  <p><%= @charity.mission %></p>
  <p><%= @charity.description %></p>
  <p><%= @charity.address1 %></p>
  <p><%= @charity.address2 %></p>
  <p><%= @charity.city %></p>
  <p><%= @charity.state %></p>
  <p><%= @charity.postal_code %></p>
  <p><%= @charity.phone %></p>
  <p><%= @charity.email %></p>
  <p><%= @charity.website %></p>
  <p><%= @charity.approved %></p>
  <p><%= link_to image_tag(@charity.logo, style:"width:150px; height:150px"), @charity.logo if @charity.logo.attached? %></p>
  <p><% @charity.images.each do |image| %> 
     <%= link_to image_tag(image, style:"width:150px; height:auto"), image %>
     <% end %>
  </p>
</div>

<div>
  <%= link_to "Back to charities", charities_path %>
</div>
